<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palodurobuilders.contractorapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".pages.CreateChangeOrderForm" >
        </activity>
        <activity android:name=".pages.DisplayChangeOrderForm" />
        <activity
            android:name=".pages.EditProperty"
            android:label="Edit Property Details" />
        <activity
            android:name=".pages.CreateAccount"
            android:label="Create Account"
            android:screenOrientation="portrait" />
        <activity
            android:name=".pages.Login"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.PropertyUtilities"
            android:label="Property Utilities"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".pages.PropertySelection"
            android:screenOrientation="portrait" />
    </application>

</manifest>